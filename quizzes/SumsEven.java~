public class SumsEven{
  public static void main(String[]args){
    
    int[] array= {14,2,1,5,6,7,1,9,10};
    System.out.println("{14,2,1,5,6,7,1,9,10} --> Sum of even numbers should be: 32");
    sumsEven(array,0);
    
    
  }
  
  public static int sumsEven(int[] array, int index){
    if(index<array.length){
      if(array[index]%2==0){
        return array[index]+sumsEven(array,index+1);
      }
      else{
        return 0+sumsEven(array,index+1);
      }
    }
    else{
      return 0;
    }
  }
  
}